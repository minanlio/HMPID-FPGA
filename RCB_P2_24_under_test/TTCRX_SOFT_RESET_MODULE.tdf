--  
-- DECODIFICA IL COMANDO DI RESET PROVENIENTE DAL TTCRX  (CODICE "1100", CMD 12) 
-- E GENERA UN IMPULSO DI RESET DA DISTRIBUIRE ALL'INTERNO DAL FIRMWARE
--


SUBDESIGN TTCRX_SOFT_RESET_MODULE
(
	-- INPUT	
		-- TTCRx
		DQ[3..0]: INPUT;
		DOUTSTR:INPUT; 
		ADDRESS[3..0]: INPUT; 
		
	-- OUTPUT	
		TTCRX_SOFT_RESETn: OUTPUT;		
)

			
BEGIN		

CASE (DQ[3..0], DOUTSTR, ADDRESS[3..0]) IS 

	WHEN B"000011100" => 
		TTCRX_SOFT_RESETn = GND;
	
	WHEN OTHERS => 
		TTCRX_SOFT_RESETn = VCC;

END CASE;
	
END;	

