--  
-- DECODIFICA IL COMANDO DI FEE_RESET (codice "1000") PROVENIENTE DAL TTCRx E GENERA UN IMPULSO DI RESET DA INVIARE AL SOLO BUSY
--

-- M. Minervini (lazzaro.manlio.minervini@cern.ch)
-- 06/10/2014


SUBDESIGN TTCRX_CLEAR_BUSY_MODULE
( 
	-- INPUT	
	   -- TTCRx
		DQ[3..0]: INPUT; 
		DOUTSTR:INPUT; 
		ADDRESS[3..0]: INPUT;
	
	-- OUTPUT
		-- BUSY
		TTCRX_CLEAR_BUSY: OUTPUT;	
)

			
BEGIN		

CASE (DQ[3..0], DOUTSTR, ADDRESS[3..0]) IS 

	WHEN B"000011000" => 
		TTCRX_CLEAR_BUSY = GND;
	
	WHEN OTHERS => 
		TTCRX_CLEAR_BUSY = VCC;

END CASE;
	
END;	

